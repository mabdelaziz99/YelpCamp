<% layout ('./layouts/boilerplate') %>

<h1>Our Campgrounds</h1>
<a href="/campgrounds/new">Add new Campground</a>
<% for (c of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= c.image %>" class="card-img-top" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= c.title %> </h5>
                    <p class="card-text">Price: $<%= c.price %></p>
                    <p class="card-text"><%= c.description %></p>
                    <p class="card-text"> <small class="text-muted"><%= c.location %></small> </p>
                    <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">View <%= c.title %></a>      
                </div>
                      </div>
          </div>
        </div>        
<% } %>

