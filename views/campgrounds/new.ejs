<% layout ('./layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add new Campground</h1>
    <div class="col-md-6 offset-3">
    <form action="/campgrounds" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="campground[image]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Campground Price</label>
            <div class="input-group" id="price">
                <span id="price-label" class="input-group-text">$</span>
                <input type="text" class="form-control" aria-label="price" name="campground[price]" aria-describedby="price-label" placeholder="0.00">
              </div>
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
        </div>
        <button class=" mb-3 btn btn-success">Add Campground</button>
        <a class="mb-3 btn btn-danger" href="/campgrounds">Cancel</a>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>
    
    